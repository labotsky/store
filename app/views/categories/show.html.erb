<p id="notice"><%= notice %></p>

<p>
  <b>Category:</b>
  <%= @category.title %>
</p>

<p>
  <b>Desciption:</b>
  <%= @category.desciption %>
</p>
<br>

<% @products.each do |product| %>
<ul>
	<li>
    	<%= link_to image_tag("big1.jpg"), '#' %>
    	<div class="product-info">
    		<h3><%= product.title %></h3>
    		<div class="product-desc">				    			
    			<strong class="price"><%= number_to_currency(product.price) %></strong>
    		</div>
    	</div>
		<div id="button">
			<%= link_to t('product.addtocart'), line_items_path(product_id: product), method: :post, remote: true %>
			<%= link_to t('product.view'), product_path(id: product.id) %>						
		</div>
	</li>
</ul>
<% end %>	